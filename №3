#include <iostream>
using namespace std;

int main() {
    int x, y;

    cout << "Введите координату x: ";
    cin >> x;

    cout << "Введите координату y: ";
    cin >> y;

    // Проверяем условие принадлежности прямой y = 1 - x
    if (y == 1 - x) {
        cout << "Точка принадлежит прямой. Координаты: (" << x << ", " << y << ")";
    }
    else {
        cout << "Точка не принадлежит прямой.";
    }

    return 0;
}
